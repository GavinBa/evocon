echo 'in market buy sell'
config trade:0

// server=197

// user=Imperator

// city=New city



p = {CITYTYPE:2, MINRESFOOD:500000, MINRESGOLD:200000, MINRESWOOD:100000, MINRESIRON:100000, MINRESSTONE:50000, TROOPRESFACTOR:4, AVGSPAN:200, BASEBUYAMT:20000 }



set famt m_city.cityManager.resource.food.amount

set iamt m_city.cityManager.resource.iron.amount

set wamt m_city.cityManager.resource.wood.amount

set samt m_city.cityManager.resource.stone.amount

set gamt m_city.cityManager.resource.gold



if city.tradesArray.length > 0 execute "canceltrade " + city.tradesArray[0].id

POST "http://192.168.1.77:8000/code/market/buysell.php" {iron:%iamt%,wood:%wamt%,stone:%samt%,gold:%gamt%,food:%famt%,riron:max(city.reservedResource.iron,p.MINRESIRON),rwood:max(city.reservedResource.wood,p.MINRESWOOD),rstone:max(city.reservedResource.stone,p.MINRESSTONE),rgold:max(city.reservedResource.gold,p.MINRESGOLD),rfood:max(city.reservedResource.food,p.MINRESFOOD),foodrate:(city.resource.food.increaseRate - city.resource.troopCostFood),avgSpan:p.AVGSPAN,troopres:p.TROOPRESFACTOR,server:'197',player:'Imperator',city:'New city',ranking:player.playerInfo.ranking,citytype:p.CITYTYPE,buyAmt:p.BASEBUYAMT}

echo $result

execute $result

label EOS

echo "done"
echo "Page generated in 0.033 seconds."
